<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_place"
        android:layout_width="143dp"
        android:layout_height="119dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textview_placename"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_population"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView_place"
        android:text="Place Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_population"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_place"
        android:layout_alignStart="@+id/textview_placename"
        android:text="Population: ..."
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>