<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".EatActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:paddingBottom="10dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <SearchView
        android:id="@+id/seach_view"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:iconifiedByDefault="false"
        android:queryHint="Search anything you want" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="226dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton"
        app:srcCompat="@drawable/tomyumsong" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="226dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        app:srcCompat="@drawable/khaopadgung" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="226dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        app:srcCompat="@drawable/tomyum" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="157dp"
        android:layout_height="156dp"
        android:layout_below="@+id/imageButton"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView3"
        android:paddingTop="30dp"
        android:text="Tom Yum Goong (Spicy Shrimp Soup)"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="158dp"
        android:layout_height="145dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:paddingTop="30dp"
        android:text="Khao Pad Gung (Fried Rice with Prawns)"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="158dp"
        android:layout_height="154dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView4"
        android:paddingTop="30dp"
        android:text="Som Tum (Spicy Greeen Papaya Salad)"
        android:textAlignment="center"
        android:textSize="20sp" />


</RelativeLayout>